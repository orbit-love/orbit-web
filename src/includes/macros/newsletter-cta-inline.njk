{% macro newsletter_cta_inline(feature_name) %}
  <form
    x-data="newsletterCTA('feature-{{feature_name}}')"
    class=""
    @submit.prevent="subscribe($event)"
  >
    <p class="mb-2 text-gray-600">We’ll let you know when it’s ready:</p>
    <div class="mb-4 sm:flex sm:justify-center">
      <label class="sr-only" for="newsletter_cta">Your email address</label>
      <input
        id="newsletter_cta"
        x-model="email"
        type="email"
        required=""
        placeholder="Your email address"
        class="block w-full sm:max-w-xs px-2 py-2 text-base leading-6 appearance-none border border-gray-100 bg-white rounded placeholder-gray-500 shadow-bottom focus:outline-none focus:shadow-outline-purple focus:border-purple-300"
      />
      <button
        class="mt-4 relative sm:mt-0 sm:h-auto sm:ml-4 block w-full sm:w-auto px-3 py-2 text-base font-semibold leading-snug bg-purple-500 text-white rounded shadow-bottom hover:bg-purple-600 hover:text-gray-100 focus:outline-none focus:shadow-outline-purple focus:border-purple-300 transition ease-in-out duration-150"
        aria-label="Subscribe to Orbit newsletter"
        :class="{ 'opacity-50 pointer-events-none': submitting, 'hover:bg-purple-100 hover:text-gray-700': !submitting }"
        :disabled="submitting"
      >
        <span :class="{ 'opacity-0': submitting }">Notify&nbsp;me</span>
        <span
          style=""
          x-show="true"
          class="absolute inset-0 flex items-center justify-center pointer-events-none opacity-0"
          :class="{ 'opacity-0': !submitting }"
        >
          <svg class="h-8 w-8 spin" viewBox="0 0 24 24">
            <path
              class="text-gray-600"
              fill="currentColor"
              d="M12 21a9 9 0 100-18 9 9 0 000 18zm0-2a7 7 0 110-14 7 7 0 010 14z"
            ></path>
            <path
              class="text-gray-400"
              fill="currentColor"
              d="M12 3a9 9 0 010 18v-2a7 7 0 000-14V3z"
            ></path>
          </svg>
        </span>
      </button>
    </div>
    <p
      x-show="message"
      x-text="message"
      class="lg:absolute sm:text-center text-gray-600 max-w-xl"
    ></p>
  </form>
{% endmacro %}